@page "/index"
@using Juan_AmparoAP1_P1.Models
@using Juan_AmparoAP1_P1.Services
@inject ViajesEspacialesService viajeEspacialService
@inject NavigationManager navigationManager
@rendermode InteractiveServer

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Registro de Viajes Espaciales</h5>
        <a href="/viajesespaciales/create" class="btn btn-primary">
            <i class="bi bi-rocket-takeoff"></i> Crear
        </a>
    </div>

    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-4">
                <label class="form-label text-secondary">Filtrar por</label>
                <select class="form-select" @bind="filtro">
                    <option value="" selected disabled>Elija una opción</option>
                    <option value="id">Viaje Id</option>
                    <option value="descripcion">Descripción</option>
                </select>
            </div>
            <div class="col-md-8">
                <label class="form-label text-secondary">Búsqueda</label>
                <div class="input-group">
                    <input class="form-control" @bind="valorFiltro" placeholder="Buscar..." />
                    <button class="btn btn-outline-primary" @onclick="Buscar">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col">ViajeId</th>
                        <th scope="col">Descripción</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Costo</th>
                        <th scope="col">Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in lista)
                    {
                        <tr>
                            <td>@item.ViajeId</td>
                            <td>@item.Descripcion</td>
                            <td>@item.Fecha.ToShortDateString()</td>
                            <td>@item.Costo.ToString("C2")</td>

                            <td>
                                <a href="/viajesespaciales/edit/@item.ViajeId" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a href="/viajesespaciales/delete/@item.ViajeId" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card-footer text-muted">
        Cantidad de Viajes: @lista.Count
    </div>
</div>

@code {
    public List<ViajesEspaciales> lista { get; set; } = new List<ViajesEspaciales>();
    public string filtro { get; set; } = "id";
    public string valorFiltro { get; set; } = "";

    protected override async Task OnInitializedAsync()
    {
        lista = await viajeEspacialService.Listar(v => true);
    }

    private async Task Buscar()
    {
        if (string.IsNullOrWhiteSpace(valorFiltro))
        {
            lista = await viajeEspacialService.Listar(v => true);
        }
        else
        {
            if (filtro == "id" && int.TryParse(valorFiltro, out int id))
            {
                lista = await viajeEspacialService.Listar(v => v.ViajeId == id);
            }
            else if (filtro == "descripcion")
            {
                lista = await viajeEspacialService.Listar(v =>
                    v.Descripcion.ToLower().Contains(valorFiltro.ToLower()));
            }
        }
    }
}